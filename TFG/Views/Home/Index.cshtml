@{
    ViewData["Title"] = "Home Page";
}
<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div id="Top-container">
        <div id="Top">
            <span class='database_icon'></span>
            <span class="top-text">Selected file</span>
            <button type="button" onclick='window.location.href="DatabaseConnection"' class="btn btn-default" data-toggle="tooltip" data-placement="auto" title="Change database"><span class='folder_icon'></span></button>
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">Home</li>
            </ol>
        </div>
    </div>
</nav>
@using (Html.BeginForm("GoToSelection", "Home"))
{
    <input type="text" id="functionalitySelected" name="functionalitySelected" />
    <input id="hidden-btn2" class="hidden-btn" type="submit" style="display: none;" />
}
<div id="Datacleaning" class="left-half">
    <h1>Datacleaning</h1>
    <div id="datacleaning_inside">
        <div id="data_masking" class="functionality">
            <button type="button" onclick='window.location.href="Help"' class="btn btn-default" data-toggle="tooltip" data-placement="auto" title="Help"><span class='info_icon'></span></button>
            <span class="functionality-text">Data Masking</span>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-outline-primary">Run on full database</button>
                <button type="button" onclick="goToSelection('Data Masking')" class="btn btn-outline-dark">Select what to run</button>
            </div>
        </div>
        <div id="data_unification" class="functionality">
            <button type="button" onclick='window.location.href="Help"' class="btn btn-default" data-toggle="tooltip" data-placement="auto" title="Help"><span class='info_icon'></span></button>
            <span class="functionality-text">Data Unification</span>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-outline-primary">Run on full database</button>
                <button type="button" onclick="goToSelection('Data Unification')" class="btn btn-outline-dark">Select what to run</button>
            </div>
        </div>
        <div id="remove_duplicates" class="functionality">
            <button type="button" onclick='window.location.href="Help"' class="btn btn-default" data-toggle="tooltip" data-placement="auto" title="Help"><span class='info_icon'></span></button>
            <span class="functionality-text">Remove Duplicates</span>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-outline-primary">Run on full database</button>
                <button type="button" onclick="goToSelection('Remove Duplicates')" class="btn btn-outline-dark">Select what to run</button>
            </div>
        </div>
        <div id="constraints" class="functionality">
            <button type="button" onclick='window.location.href="Help"' class="btn btn-default" data-toggle="tooltip" data-placement="auto" title="Help"><span class='info_icon'></span></button>
            <span class="functionality-text">Constraints</span>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-outline-primary">Run on full database</button>
                <button type="button" onclick="goToSelection('Constraints')" class="btn btn-outline-dark">Select what to run</button>
            </div>
        </div>
        <div id="missing_values" class="functionality">
            <button type="button" onclick='window.location.href="Help"' class="btn btn-default" data-toggle="tooltip" data-placement="auto" title="Help"><span class='info_icon'></span></button>
            <span class="functionality-text">Treating Missing Values</span>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-outline-primary">Run on full database</button>
                <button type="button" onclick="goToSelection('Treating Missing Values')" class="btn btn-outline-dark">Select what to run</button>
            </div>
        </div>
    </div>
</div>
