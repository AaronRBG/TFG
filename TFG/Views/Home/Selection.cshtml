@{
    ViewData["Title"] = "Database Connection";
}
<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div id="Top-container">
        <div id="Top">
            <span class='database_icon'></span>
            <span class="top-text">Selected file</span>
            <button type="button" onclick='window.location.href="DatabaseConnection"' class="btn btn-default" data-toggle="tooltip" data-placement="auto" title="Change database"><span class='folder_icon'></span></button>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="Index" Index">Home</a></li>
                @{/*<li class="breadcrumb-item"><a href="#">Library</a></li>*/}
                <li class="breadcrumb-item active" aria-current="page">Selection</li>
            </ol>
        </div>
    </div>
</nav>
<div id="Local" class="left-half">
    <div class="middle-container">
        <h1>Add a local database</h1>
        <div id="local_inside">
            <span class='file_icon'></span>
            <span class="top-text">Selected file</span>
            <input type="file" id="fileLoader" name="files" title="Load File" />
            <button type="button" class="btn btn-default" onclick="openfileDialog();"><span class='add_icon'></span></button>
        </div>
    </div>
</div>

<div id="Remote" class="right-half">
    <div class="middle-container">
        <h1>Connect to a remote database</h1>
        <div id="remote_inside">
            <textarea id="constr" placeholder="Introduce your connection string"></textarea>
            @using (Html.BeginForm("connect", "Home"))
            {
                <input type="text" id="connectionString" name="connectionString" />
                <input id="hidden-btn" type="submit" value="puto c#" style="display: none;" />
            }
        </div>
    </div>
</div>
    </div>
<div id="Bottom-container">
    <div id="Bottom">
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-outline-primary">Connect to Local</button>
            <button type="button" onclick="connect()" class="btn btn-outline-dark">Connect to Remote</button>
        </div>
    </div>
</div>

